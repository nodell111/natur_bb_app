<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:textAlignment="center">

    <TextView
        android:id="@+id/maintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:text="Natur Brandenburg"
        android:fontFamily="@font/averiaseriflibre_bold"
        android:textSize="28sp"
        android:typeface="serif"/>

    <ImageView
        android:id="@+id/mainbg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/maintitle"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mainbgnew" />

    <TextView
        android:id="@+id/slogan"
        android:layout_below="@id/mainbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Exploring parks"
        android:fontFamily="@font/averiaseriflibre_bold"
        android:textSize="28sp"
        android:typeface="serif"/>


    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/averiaseriflibre_regular"
        android:paddingHorizontal="80dp"
        android:paddingVertical="10dp"
        android:text="Get started"
        android:textSize="24sp"
        android:typeface="serif"
        app:cornerRadius="10dp" />

</RelativeLayout>